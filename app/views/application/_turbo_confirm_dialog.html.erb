<dialog
  id="turbo-confirm-dialog" closedby="any"
  aria-labelledby="turbo-confirm-title" aria-describedby="turbo-confirm-message"
  class="max-w-md rounded-lg shadow-xl bg-white border border-gray-200"
>
  <header class="px-6 py-4 border-b border-gray-200">
    <hgroup class="space-y-2">
      <h3 id="turbo-confirm-title" class="text-xl font-semibold text-gray-900">Confirm</h3>
      <p id="turbo-confirm-message" class="text-gray-600"></p>
    </hgroup>
  </header>

  <footer class="px-6 py-4 border-t border-gray-200 flex flex-col sm:flex-row gap-3 sm:justify-end">
    <button type="button" commandfor="turbo-confirm-dialog" command="close" class="w-full sm:w-auto rounded-lg py-3 px-5 bg-gray-100 hover:bg-gray-200 inline-block font-medium cursor-pointer">
    Cancel
    </button>
    <form method="dialog" class="w-full sm:w-auto">
      <button type="submit" value="confirm" class="w-full sm:w-auto rounded-lg py-3 px-5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer">
      Confirm
      </button>
    </form>
  </footer>
</dialog>
