<%# locals: (ticket:) %>

<%= turbo_frame_tag ticket do %>
  <div id="<%= dom_id ticket, :wrapper %>" class="w-full sm:w-auto my-5 space-y-5">
    <div>
      <strong class="block font-medium mb-1">Title:</strong>
      <%= ticket.title %>
    </div>
    <div>
      <strong class="block font-medium mb-1">Description:</strong>
      <%= ticket.description %>
    </div>

    <%= link_to "Edit", edit_ticket_path(ticket), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= button_to "Destroy", ticket,
      method: :delete,
      form_class: "inline-block", class: "mt-2 rounded-lg py-3 px-5 bg-red-600 hover:bg-red-500 font-medium text-white cursor-pointer",
      data: { turbo_confirm: "Are you sure?", turbo_frame: "_top" }
    %>
  </div>
<% end %>