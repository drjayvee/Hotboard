<% content_for :title, "Tickets" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Tickets</h1>
    <%= link_to "New ticket", new_ticket_path,
      class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium",
      data: { turbo_frame: dom_id(@new_ticket) }
    %>
  </div>

  <%= turbo_frame_tag @new_ticket, target: "_top" %>

  <div id="tickets" class="min-w-full divide-y divide-gray-200 space-y-5">
    <% if @tickets.any? %>
      <% @tickets.each do |ticket| %>
        <div class="flex flex-col sm:flex-row justify-between items-center pb-5 sm:pb-0">
          <%= render ticket %>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No tickets found.</p>
    <% end %>
  </div>
</div>
